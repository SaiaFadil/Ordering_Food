<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
    android:backgroundTint="@color/secondary"
    android:background="@color/secondary"
        android:padding="@dimen/_2sdp"
        tools:context=".ui.activity.GantiPasswordLupa">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="fill_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:fontFamily="@font/rowdiesregular"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ATUR ULANG KATA SANDI"
                    android:textSize="@dimen/_18ssp"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:gravity="center_horizontal"
                    android:textStyle="bold"
                    />

                <TextView
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:fontFamily="@font/rowdiesregular"
                    android:layout_height="wrap_content"
                    android:text="Silahkan masukkan kata sandi baru"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textSize="@dimen/_14ssp"
                    android:textAlignment="center"/>
                <ImageView
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:id="@+id/gambaranimasi"
                    android:layout_width="@dimen/_180sdp"
                    android:layout_height="@dimen/_180sdp"
                    android:src="@drawable/gambarorang"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:layout_gravity="center"
                    />
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_et_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:backgroundTint="@color/Et_Bg_Color"
                    app:cardCornerRadius="@dimen/_5sdp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <EditText
                            android:id="@+id/et_konfpassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/_50sdp"
                            android:background="@color/Et_Bg_Color"
                            android:backgroundTint="@color/Et_Bg_Color"
                            android:fontFamily="@font/robotoregular"
                            android:hint="Masukkan Kata Sandi Anda"
                            android:inputType="textPassword"
                            android:padding="@dimen/_10sdp"
                            android:textColor="@color/black"
                            android:textColorHint="@color/Et_Hint_Color" />
                        <ImageView
                            android:backgroundTint="@color/Et_Bg_Color"
                            android:id="@+id/img_lihatkonfpassword"
                            android:layout_marginLeft="@dimen/_minus40sdp"
                            android:layout_width="@dimen/_35sdp"
                            android:layout_height="@dimen/_35sdp"
                            android:padding="@dimen/_5sdp"
                            android:layout_gravity="center"
                            android:src="@drawable/eye_close"
                            android:scaleType="fitXY"/>
                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_et_konfpassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:backgroundTint="@color/Et_Bg_Color"
                    app:cardCornerRadius="@dimen/_5sdp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <EditText
                            android:id="@+id/et_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/_50sdp"
                            android:background="@color/Et_Bg_Color"
                            android:backgroundTint="@color/Et_Bg_Color"
                            android:fontFamily="@font/robotoregular"
                            android:hint="Konfirmasi Kata Sandi Anda"
                            android:inputType="textPassword"
                            android:padding="@dimen/_10sdp"
                            android:textColor="@color/black"
                            android:textColorHint="@color/Et_Hint_Color" />
                        <ImageView
                            android:backgroundTint="@color/Et_Bg_Color"
                            android:id="@+id/img_lihatpassword"
                            android:layout_marginLeft="@dimen/_minus40sdp"
                            android:layout_width="@dimen/_35sdp"
                            android:layout_height="@dimen/_35sdp"
                            android:padding="@dimen/_5sdp"
                            android:layout_gravity="center"
                            android:src="@drawable/eye_close"
                            android:scaleType="fitXY"/>
                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/aturulangkatasandi"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:text="Konfirmasi"
                    android:fontFamily="@font/rowdiesregular"
                    android:textSize="@dimen/_16ssp"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:shadowRadius="3"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:backgroundTint="@color/primary"/>

            </LinearLayout>

        </ScrollView>
    </LinearLayout>
